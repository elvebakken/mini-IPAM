# Mini-IPAM Environment Configuration
# Copy this file to .env and adjust the values as needed
# For Docker deployments, set these in docker-compose.yml or use environment variables

# =============================================================================
# Required Configuration
# =============================================================================

# Secret key for session signing and encryption
# MUST be changed in production! Use a long, random string (minimum 32 characters)
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-to-a-long-random-string

# =============================================================================
# Data Storage
# =============================================================================

# Directory where application data is stored
# Default: /data (for Docker) or ./appdata (for manual installation)
DATA_DIR=/data

# =============================================================================
# Security & Authentication
# =============================================================================

# Use secure cookies (HTTPS only)
# Set to true in production when using HTTPS
# Set to false for development/local testing
COOKIE_SECURE=false

# Session timeout in seconds
# Default: 86400 (24 hours)
SESSION_TIMEOUT_SECONDS=86400

# Password history count - number of previous passwords to remember
# Default: 5
PASSWORD_HISTORY_COUNT=5

# Password expiration in days
# Set to 0 to disable password expiration
# Default: 0 (disabled)
PASSWORD_EXPIRATION_DAYS=0

# =============================================================================
# Multi-Factor Authentication (MFA)
# =============================================================================

# Enable MFA functionality
# Default: false
MFA_ENABLED=false

# Require MFA for all users
# Automatically enables MFA_ENABLED if set to true
# Default: false
MFA_ENFORCE_ALL=false

# Require MFA verification for data export operations
# Default: false
MFA_REQUIRED_FOR_EXPORT=false

# Verify MFA before allowing export operations
# Default: false
MFA_VERIFY_BEFORE_EXPORT=false

# MFA issuer name displayed in authenticator apps
# Default: Mini-IPAM
MFA_ISSUER_NAME=Mini-IPAM

# =============================================================================
# Audit Logging
# =============================================================================

# Audit log retention period in days
# Logs older than this period will be automatically deleted
# Default: 90 days
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# Environment
# =============================================================================

# Application environment
# Set to "production" to enable production mode features
# Default: (empty)
ENVIRONMENT=
